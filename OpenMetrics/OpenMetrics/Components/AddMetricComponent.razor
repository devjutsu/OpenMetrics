<div>EditMetricComponent</div>

<button class="btn btn-primary" @onclick="@(() => Add())">Add Metric</button>

@code {
    [Parameter]
    public EventCallback<Metric> DoneAdding { get; set; }

    async Task Add()
    {
        var metric = new Metric()
        {
            Id = new Random().Next(100000),
            Cid = "Test"
        };
        await DoneAdding.InvokeAsync(metric);
    }
}
